<div class='card'>
	<div class='card-header'>
		✍️ Editar un nuevo producto al inventario
	</div>
	<form method='post' action='/edit/{{data.id}}?_method=PUT' class='card-body'>
		<div class='input-group mb-3'>
			<span
				class='input-group-text'
				id='inputGroup-sizing-default'
			>Nombre</span>
			<input
				name='nombre'
				type='text'
				value='{{data.nombre}}'
				class='form-control'
				aria-label='Sizing example input'
				aria-describedby='inputGroup-sizing-default'
			/>
		</div>
		<div class='input-group mb-3'>
			<span
				class='input-group-text'
				id='inputGroup-sizing-default'
			>Cantidad</span>
			<input
				name='cantidad'
				type='number'
				value='{{data.cantidad}}'
				class='form-control'
				aria-label='Sizing example input'
				aria-describedby='inputGroup-sizing-default'
			/>
		</div>
		<div class='d-flex input-group mb-3'>
			<span class='input-group-text' id='inputGroup-sizing-default'>Color</span>
			<input
				name='color'
				type='color'
				value='{{data.color}}'
				class='form-control'
				aria-label='Sizing example input'
				aria-describedby='inputGroup-sizing-default'
			/>
		</div>
		<input type='submit' value='✍️ Editar producto' class='btn btn-info' />
	</form>
</div>